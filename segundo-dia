<meta charset="utf-8">
<script type="text/javascript">
		var nome = prompt("Olá, qual o seu nome?")
		var idade = prompt("e quantos voce tem?")
		var linguagem = prompt("qual linguagem você esta estudando??")

		alert("Olá, " + nome + " você tem " + idade + " anos, e esta aprendendo " + linguagem + " !!")
		var pergunta = prompt("você gosta de estudar " + linguagem + " ? Responda com 1 para sim ou 2 para não")
		if (pergunta == "1") {
			alert("Muito bom ! Continue estudando e você tera muito sucesso.")
		} else if (pergunta == "2") {
			alert("Ahh que pena... Já tentou aprender outras linguagens?")
		} else {
			alert("Responda com 1 ou 2")
			
		}
</script>
